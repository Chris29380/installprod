server {
	listen 80 default_server;
	listen [::]:80 default_server;

	server_name _;

	location / {
		if ($block_ua) {
            return 403;
        }
	}
	
}

server {

	listen 443 ssl default_server;
	listen [::]:443 ssl default_server;
	
	ssl_certificate /etc/nginx/ssl/certif.pem;
    ssl_certificate_key /etc/nginx/ssl/certif.key;

	server_name _;

	location / {
		if ($block_ua) {
            return 403;
        }
	}
	
}

